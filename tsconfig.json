{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": [ ],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "test/",
    "dist/"
  ]
}
